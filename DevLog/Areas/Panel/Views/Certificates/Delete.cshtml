@using DevLog.Models.Constants
@model DevLog.Areas.Panel.Models.ViewModels.CertificateFormViewModel

@{
    Layout = "_FormLayout";
    ViewData["Title"] = "Delete Certificate";
}

<div class="form-group">
    <label asp-for="Title"></label>
    <input asp-for="Title" class="form-control" disabled="disabled" />
</div>
<div class="form-group">
    <label asp-for="Url"></label>
    <input asp-for="Url" class="form-control" disabled="disabled" />
</div>
<div class="form-group">
    <label asp-for="File"></label>
    <div id="files-preview" class="single-file mt-2">
        <img src="@(Model.ImageVirtualPath ?? FilePathsConstant.NoImage)" class="thumbnail" />
    </div>
</div>
<div class="form-group">
    <label asp-for="CreateDate"></label>
    <input type="text" value="Model.CreateDate" class="form-control" disabled="disabled" />
</div>
<div class="form-group">
    <label asp-for="LastEditDate"></label>
    <input type="text" value="Model.LastEditDate" class="form-control" disabled="disabled" />
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ImageVirtualPath" />
    <button class="btn btn-danger" type="submit">Delete</button>
    <a asp-action="Index" class="btn btn-danger">Back</a>
</form>
