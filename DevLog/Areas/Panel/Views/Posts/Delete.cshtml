@using DevLog.Models.Constants
@using DevLog.Utilities
@model DevLog.Areas.Panel.Models.ViewModels.PostFormViewModel

@{
    Layout = "_FormLayout";
    ViewData["Title"] = "Delete Post";
}
@section Scripts {
    <script>
        Panel.InitializeEditorReadOnly("#txtBody");
        Panel.InitializeTagsInputReadOnly();
    </script>
}

<div class="form-group">
    <label asp-for="Title"></label>
    <input asp-for="Title" class="form-control" disabled="disabled" />
</div>
<div class="form-group">
    <label asp-for="Body"></label>
    <textarea asp-for="Body" id="txtBody"></textarea>
    <span asp-validation-for="Body"></span>
</div>
<div class="form-group">
    <label asp-for="PostCategoryId"></label>
    <select asp-for="PostCategoryId" asp-items="@ViewBag.PostCategoryId" class="form-select" disabled="disabled">
        <option value="">None</option>
    </select>
</div>
<div class="form-group">
    <label asp-for="Tags"></label>
    <input type="text" id="tags-input" asp-for="Tags" disabled="disabled" />
</div>
<div class="form-group">
    <label asp-for="File"></label>
    <div id="files-preview" class="single-file mt-2">
        <img src="@(Model.ImageVirtualPath ?? FilePathsConstant.NoImage)" class="thumbnail" />
    </div>
</div>
<div class="form-group form-check">
    <div class="custom-control custom-checkbox mr-sm-2">
        <label class="form-check-label">
            <input type="checkbox" class="custom-control-input" asp-for="IsCommentsOn" disabled="disabled">
            <label class="custom-control-label" asp-for="IsCommentsOn"></label>
        </label>
    </div>
</div>
<div class="form-group">
    <label asp-for="UserFullName"></label>
    <input asp-for="UserFullName" class="form-control" disabled="disabled" />
</div>
<div class="form-group">
    <label asp-for="CreateDate"></label>
    <input value="@Model.CreateDate.ToFriendlyFullDateTime()" class="form-control" disabled="disabled" />
</div>
<div class="form-group">
    <label asp-for="LastEditDate"></label>
    <input value="@Model.LastEditDate.ToFriendlyFullDateTime()" class="form-control" disabled="disabled" />
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="ImageVirtualPath" />
    <button class="btn btn-danger" type="submit">Delete</button>
    <a asp-action="Index" class="btn btn-danger">Back</a>
</form>
