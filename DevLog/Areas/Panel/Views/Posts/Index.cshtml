@model DevLog.Areas.Panel.Models.ViewModels.PostIndexViewModel
@{
    ViewData["Title"] = "Posts";
}
@section Scripts
{
    <script>
        Panel.LoadPostsTable(
            "@Url.Action("LoadPostsTable")",
            "@Url.Action("Edit")",
            "@Url.Action("Details")",
            "@Url.Action("Delete")"
        )
    </script>
}

<div class="my-5 title-bar">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-success py-3 px-5 mt-3 ml-2 my-2">
        <span class="fa fa-plus"></span>
        Create
    </a>
</div>

<table id="jq-table" class="table table-striped table-bordered dt-responsive nowrap table-light" width="100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostCategoryTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tags)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserFullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCommentsOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastEditDate)
            </th>
            <th class="no-sort"></th>
        </tr>
    </thead>
</table>
